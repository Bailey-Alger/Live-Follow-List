{
    "manifest_version": 3,
    "name": "Live Follow List",
    "version": "1.0",
    "description": "Displays your live follow list for twitch and youtube",
    "host_permissions": [
        "https://api.twitch.tv/*",
        "https://id.twitch.tv/*"
    ],
    "permissions": [
      "activeTab"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "service_worker": {
        "script": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": [
          "content.js"
        ]
      }
    ],
  
    "web_accessible_resources": [
      "content.js"
    ]
  }
  