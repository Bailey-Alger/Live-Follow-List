{
    "manifest_version": 3,
    "name": "Live Follow List",
    "version": "1.0",
    "description": "Displays your live follow list for twitch and youtube",
    "host_permissions": [
        "https://api.twitch.tv/*",
        "https://id.twitch.tv/*"
    ],
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
      },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
    {
        "matches": [
            "https://*.twitch.tv/*"
        ],
        "js": [
            "content.js"
        ],
        "css": [
            "index.css"
        ]
    }
    ],
    "web_accessible_resources": [
        {
            "resources": ["index.html", "style.css"],
            "matches": ["https://*.twitch.tv/*"]
        }
    ]
}
  