{
    "manifest_version": 3,
    "name": "Live Follow List",
    "version": "1.0",
    "description": "Displays your live follow list for twitch and youtube",
    "host_permissions": [
        "https://api.twitch.tv/*",
        "https://id.twitch.tv/*",
        "http://localhost/*"
    ],
    "permissions": [
        "scripting",
        "storage",
        "identity",
        "tabs",
        "alarms"
    ],
    "oauth2": {
        "client_id": "pa669by8xti1oag6giphneaeykt6ln",
        "scopes": ["user:read:follows"]
    },
    "action": {
        "default_popup": "popup.html"
      },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/components/TwitchFollowList.jsx", "src/components/TwitchLogin.jsx"]
        }
    ],
    "background": {
        "service_worker": "src/backgroundTwitch.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": ["index.css"],
            "matches": ["https://*.twitch.tv/*"]
        }
    ]
}
  